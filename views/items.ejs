<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= category.name %> - Items</title>
  </head>
  <body>
    <% if(!items || items.length === 0) { %>
    <h1>No items found</h1>
    <% } else { %>
    <h1><%= category.name %></h1>
    <% items.forEach(item => { %>
    <a> <%= item.name %> - <%= item.price %>$ </a> - <a href="/items/<%= item.id %>/update">Update</a>
    <br />
    <% }); } %>
    <br /><br />
    <a href="/">Back to home page</a>
  </body>
</html>
